<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主界面底部的ImageView属性start-->
    <style name="main_image">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--主界面底部的ImageView属性end-->

    <!--主界面底部的TextView属性start-->
    <style name="main_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--主界面底部的TextView属性end-->

    <!--登录界面中间一条线begin-->
    <style name="viewline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/ed_line</item>
    </style>
    <!--登录界面中间一条线end-->

    <!--标题栏左边返回按钮begin-->
    <style name="title_img_white">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@mipmap/back</item>
        <!--标题栏左边返回按钮end-->
    </style>

    <!--标题中间文本begin-->
    <style name="title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--标题中间文本begin-->

    <!--点名Item RelativeLayout begin-->
    <style name="rl_release_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/hr_rl_selected</item>
    </style>
    <!--点名Item RelativeLayout begin-->

    <!-- 点名Item TextView begin -->
    <style name="tv_release_lable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 点名Item TextView begin -->

    <!-- 点名Item 横线 begin -->
    <style name="view_release_viewline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/colorE2E2E2</item>
    </style>
    <!-- 点名Item 横线 end -->

    <!-- 点名界面 正常请假 begin -->
    <style name="task_button">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 点名界面 正常请假 end -->

</resources>
