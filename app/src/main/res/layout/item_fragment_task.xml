<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_release_label"
        style="@style/rl_release_label" >

        <TextView
            android:id="@+id/release_label"
            style="@style/tv_release_lable"
            android:text="哈哈哈" />
        <Button
            android:id="@+id/task_leave"
            style="@style/task_button"
            android:gravity="center"
            android:layout_toLeftOf="@+id/task_normal"
            android:background="@drawable/btn_blue"
            android:text="@string/task_leave" />
        <Button
            android:id="@+id/task_normal"
            style="@style/task_button"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_blue"
            android:text="@string/task_normal" />
    </RelativeLayout>
    <View
        android:id="@+id/v_line1"
        style="@style/view_release_viewline"
        android:layout_below="@id/rl_release_label" />
</RelativeLayout>