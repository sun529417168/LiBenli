<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--点到信息Item-->
    <RelativeLayout
        android:id="@+id/rl_release_label"
        style="@style/rl_release_label">

        <TextView
            android:id="@+id/dianming_date"
            style="@style/tv_release_lable" />

        <TextView
            android:id="@+id/dianming_name"
            style="@style/tv_release_lable"
            android:layout_toRightOf="@id/dianming_date" />

        <Button
            android:id="@+id/dianming_type"
            style="@style/task_button"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line1"
        style="@style/view_release_viewline"
        android:layout_below="@id/rl_release_label" />
</RelativeLayout>