<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <!--成绩排行-->
    <include
        android:id="@+id/rl_title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/ll_search_name"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="11dp">

                <RelativeLayout
                    android:id="@+id/search_textview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/searchbg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:background="@mipmap/name_search" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scores_name"
                            android:textColor="@color/colorb5b5b5"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search_edittext_layout"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/searchbg"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edit_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/scores_name"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingLeft="25dp"
                        android:singleLine="true"
                        android:textColor="@color/colorb5b5b5"
                        android:textColorHint="@color/colorb5b5b5"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@+id/edit_search"
                        android:layout_alignLeft="@+id/edit_search"
                        android:layout_alignTop="@+id/edit_search"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/name_search" />
                </RelativeLayout>

                <View
                    style="@style/line_color_gray"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <!-- 排名姓名战斗力 -->
            <LinearLayout
                android:id="@+id/ll_tilte"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ll_search_name"
                android:gravity="center_vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/name_search" />

                    <TextView
                        style="@style/notice_title"
                        android:text="@string/scores_ranking" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/name_search" />

                    <TextView
                        style="@style/notice_title"
                        android:text="@string/scores_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/name_search" />

                    <TextView
                        style="@style/notice_title"
                        android:text="@string/scores_combat" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_color_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/ll_tilte" />
        </RelativeLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/info_refresh_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchbar"
            android:cacheColorHint="#00000000"
            android:divider="#19000000"
            android:dividerHeight="4dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrListViewExtrasEnabled="false"
            ptr:ptrMode="both"
            ptr:ptrScrollingWhileRefreshingEnabled="true" />

    </RelativeLayout>
</LinearLayout>